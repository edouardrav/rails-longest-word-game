<h1>New game</h1>
<div class="d-flex mb-3">
  <% @letters.each do |letter| %>
  <div class="rounded border bg-primary shadow-sm text-white fs-2 me-2 text-center" style="width: 50px"><%= letter %></div>
  <% end %>
</div>

<form action="/score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag 'letters', @letters %>
  <div class="input-group" style="width: 600px">
    <span class="input-group-text">What is the longest word you can find?</span>
    <input type="text" name="word" class="form-control">
    <input type="submit" class="btn btn-primary" value="Play">
  </div>

  <!-- ... -->
</form>
